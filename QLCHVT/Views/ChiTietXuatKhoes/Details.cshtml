@model IEnumerable<QLCHVT.Models.ViewModelXK>



<h2>Chi tiết đơn bán</h2>


<p>
    @foreach (var m in ViewBag.Main)
    {
<p>Số hóa đơn: @m.xuatkho.MaXK</p>
    <p>Mã nhân viên:@m.nhanvien.HoNV @m.nhanvien.Ten  (@m.nhanvien.MaNV) </p>
}
    </p>


    <table class="table">
        <tr>
            <th>
                STT
            </th>
            <th>
                Tên vật tư
            </th>

            <th>
                Số lượng
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Thành tiền
            </th>

            <th></th>
        </tr>
        @{
            int i = 0;
            double tongTien = 0;
        }
        @foreach (var item in ViewBag.Sub)
        {
            i++;
            tongTien += item.Thanhtien;
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @item.vattu.TenVT
                </td>

                <td>
                    @item.ctxk.Soluong
                </td>

                <td>
                    @item.ctxk.DongiaBan
                </td>

                <td>
                    @string.Format("{0:0,###}", @item.Thanhtien)
                </td>
            </tr>
        }
        <tr>
            <th colspan="5">Tổng tiền</th>
            <th>@string.Format("{0:0,###}", @tongTien)</th>
        </tr>

    </table>

    <div>
        @Html.ActionLink("Back to List", "Index", "XuatKho")
    </div>
